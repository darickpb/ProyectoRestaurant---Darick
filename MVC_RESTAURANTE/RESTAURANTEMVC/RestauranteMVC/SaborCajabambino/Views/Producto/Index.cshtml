@model IEnumerable<SaborCajabambino.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<div class="main-content-container">

    <h1 class="text-white mb-4">Gestión de Productos</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="input-group" style="max-width: 400px;">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" id="searchInput" class="form-control" placeholder="Buscar por nombre o categoría...">
                </div>

                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i> Nuevo Producto
                </a>
            </div>

            <div class="table-responsive-md" style="max-height: 550px; overflow-y: auto;">
                <table class="table table-hover">
                    <thead class="sticky-top">
                        <tr>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Categoría</th>
                            <th>Preparado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>S/. @Html.DisplayFor(modelItem => item.Precio)</td>
                                <td>@Html.DisplayFor(modelItem => item.IdCategoriaNavigation.Nombre)</td>
                                <td>
                                    @if (item.EsPreparado.GetValueOrDefault())
                                    {
                                        <span class="badge bg-success">Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" class="btn btn-sm btn-info" asp-route-id="@item.IdProducto" title="Editar"><i class="fas fa-pencil-alt"></i></a>
                                    <a href="javascript:void(0);" onclick="cargarDetalle(@item.IdProducto)" class="btn btn-sm btn-secondary" title="Ver Detalles"><i class="fas fa-info-circle"></i></a>
                                    <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.IdProducto" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-md-4">
            <div id="detalleProducto" class="sticky-top" style="top: 20px;">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Función para cargar la vista parcial de detalles
        function cargarDetalle(id) {
            $.get('/Producto/Details/' + id, function (data) {
                $('#detalleProducto').html(data);
            });
        }

        $(document).ready(function () {
            // Cargar los detalles del primer producto al iniciar
            var primerId = @((Model.FirstOrDefault()?.IdProducto ?? 0));
            if (primerId > 0) {
                cargarDetalle(primerId);
            }

            // Lógica de búsqueda en tiempo real
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}