@model SaborCajabambino.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="main-content-container">

    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdProducto" />

                <div class="mb-4">
                    <h1 class="text-white">Editar Producto</h1>
                    <p class="text-white-50">Modifica la información del producto.</p>
                </div>

                <div class="card bg-dark-card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 text-center d-flex flex-column justify-content-center align-items-center border-end-md">
                                <img src="@Model.Foto" alt="Imagen del producto" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #66fcf1;" />
                                <h4 class="text-white">@Model.Nombre</h4>
                                <span class="badge bg-success">ID: @Model.IdProducto</span>
                            </div>

                            <div class="col-md-8">
                                <div class="p-3">
                                    <dl class="details-list-form">
                                        <dt><label asp-for="Nombre"></label></dt>
                                        <dd><input asp-for="Nombre" class="form-control form-control-dark" /></dd>

                                        <dt><label asp-for="Precio"></label></dt>
                                        <dd><input asp-for="Precio" class="form-control form-control-dark" type="number" step="0.01" /></dd>

                                        <dt><label asp-for="IdCategoria"></label></dt>
                                        <dd>
                                            <select asp-for="IdCategoria" class="form-control form-control-dark" asp-items="ViewBag.IdCategoria">
                                                <option value="">-- Seleccione --</option>
                                            </select>
                                        </dd>

                                        <dt><label asp-for="Descripcion"></label></dt>
                                        <dd><textarea asp-for="Descripcion" class="form-control form-control-dark" rows="3"></textarea></dd>

                                        <dt><label asp-for="Foto">URL de Foto</label></dt>
                                        <dd><input asp-for="Foto" class="form-control form-control-dark" /></dd>

                                        <dt>¿Es Preparado?</dt>
                                        <dd>
                                            <div class="form-check form-switch">
                                                <input type="hidden" name="EsPreparado" value="false" />
                                                <input class="form-check-input" type="checkbox" name="EsPreparado" value="true" @(Model.EsPreparado == true ? "checked" : "")>
                                            </div>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary me-2"><i class="fas fa-arrow-left me-2"></i>Cancelar</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Guardar Cambios</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}