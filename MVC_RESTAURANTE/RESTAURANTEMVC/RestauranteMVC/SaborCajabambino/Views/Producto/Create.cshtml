@model SaborCajabambino.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="main-content-container">

    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="text-center mb-4">
                    <h1 class="text-white">Registrar Nuevo Producto</h1>
                    <p class="text-white-50">Completa la información del producto a continuación.</p>
                </div>

                <div class="card bg-dark-card">
                    <div class="card-header">
                        <i class="fas fa-box-open me-2"></i>Información del Producto
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="control-label"></label>
                                <input asp-for="Nombre" class="form-control form-control-dark" placeholder="Ej: Lomo Saltado" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Precio" class="control-label"></label>
                                <input asp-for="Precio" class="form-control form-control-dark" type="number" step="0.01" placeholder="Ej: 25.50" />
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="control-label"></label>
                            <textarea asp-for="Descripcion" class="form-control form-control-dark" rows="3" placeholder="Breve descripción del producto..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdCategoria" class="control-label"></label>
                                <select asp-for="IdCategoria" class="form-control form-control-dark" asp-items="ViewBag.IdCategoria">
                                    <option value="">-- Seleccione Categoría --</option>
                                </select>
                                <span asp-validation-for="IdCategoria" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3 d-flex align-items-center mt-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="EsPreparado" value="true" checked>
                                    <label class="form-check-label" for="EsPreparado">¿Es Preparado?</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Foto" class="control-label"></label>
                            <input asp-for="Foto" class="form-control form-control-dark" placeholder="URL de la imagen del producto..." />
                            <span asp-validation-for="Foto" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancelar y Volver</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Crear Producto</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}