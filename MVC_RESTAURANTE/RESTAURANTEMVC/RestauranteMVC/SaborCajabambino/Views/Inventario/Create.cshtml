@model SaborCajabambino.Models.Inventario

@{
    ViewData["Title"] = "Crear Item de Inventario";
}

<div class="main-content-container">

    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="text-center mb-4">
                    <h1 class="text-white">Registrar Nuevo Item</h1>
                    <p class="text-white-50">Completa la información del item para el inventario.</p>
                </div>

                <div class="card bg-dark-card mb-4">
                    <div class="card-header">
                        <i class="fas fa-box me-2"></i>Información del Item
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ItemNombre" class="control-label">Nombre</label>
                                <input asp-for="ItemNombre" class="form-control form-control-dark" placeholder="Ej: Arroz Costeño" />
                                <span asp-validation-for="ItemNombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdItemCategoria" class="control-label">Categoría</label>
                                <select asp-for="IdItemCategoria" class="form-control form-control-dark" asp-items="ViewBag.IdItemCategoria">
                                    <option value="">-- Seleccione una categoría --</option>
                                </select>
                                <span asp-validation-for="IdItemCategoria" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="UnidadMedida" class="control-label">Unidad de Medida</label>
                                <input asp-for="UnidadMedida" class="form-control form-control-dark" placeholder="Ej: Kilos, Litros, Unidades" />
                                <span asp-validation-for="UnidadMedida" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaDeExpiracion" class="control-label">Fecha de Expiración</label>
                                <input asp-for="FechaDeExpiracion" class="form-control form-control-dark" type="date" />
                                <span asp-validation-for="FechaDeExpiracion" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card bg-dark-card">
                    <div class="card-header">
                        <i class="fas fa-warehouse me-2"></i>Control de Stock
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Stock" class="control-label"></label>
                                <input asp-for="Stock" class="form-control form-control-dark" type="number" step="0.01" placeholder="Cantidad actual" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CostoPorUnidad" class="control-label">Costo por Unidad</label>
                                <input asp-for="CostoPorUnidad" class="form-control form-control-dark" type="number" step="0.01" placeholder="Costo unitario" />
                                <span asp-validation-for="CostoPorUnidad" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NivelReorden" class="control-label">Nivel Mínimo de Reorden</label>
                                <input asp-for="NivelReorden" class="form-control form-control-dark" type="number" placeholder="Stock mínimo permitido" />
                                <span asp-validation-for="NivelReorden" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CantidadReorden" class="control-label">Cantidad de Reorden</label>
                                <input asp-for="CantidadReorden" class="form-control form-control-dark" type="number" placeholder="Cantidad a solicitar" />
                                <span asp-validation-for="CantidadReorden" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancelar y Volver</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Crear Item</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}