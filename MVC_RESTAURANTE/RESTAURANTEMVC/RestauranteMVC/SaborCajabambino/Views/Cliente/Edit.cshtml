@model SaborCajabambino.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="main-content-container">

    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdCliente" />

                <div class="text-center mb-4">
                    <h1 class="text-white">Editar Cliente</h1>
                    <p class="text-white-50">Actualiza la información del cliente a continuación.</p>
                </div>

                <div class="card bg-dark-card mb-4">
                    <div class="card-header">
                        <i class="fas fa-user-circle me-2"></i>Información Personal
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombres" class="control-label"></label>
                                <input asp-for="Nombres" class="form-control form-control-dark" placeholder="Ej: Juan Carlos" />
                                <span asp-validation-for="Nombres" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Dni" class="control-label"></label>
                                <input asp-for="Dni" class="form-control form-control-dark" placeholder="Ej: 70123456" />
                                <span asp-validation-for="Dni" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ApellidoPaterno" class="control-label"></label>
                                <input asp-for="ApellidoPaterno" class="form-control form-control-dark" placeholder="Ej: Pérez" />
                                <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ApellidoMaterno" class="control-label"></label>
                                <input asp-for="ApellidoMaterno" class="form-control form-control-dark" placeholder="Ej: Gonzales" />
                                <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaNacimiento" class="control-label"></label>
                                <input asp-for="FechaNacimiento" type="date" class="form-control form-control-dark" />
                                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card bg-dark-card">
                    <div class="card-header">
                        <i class="fas fa-map-marker-alt me-2"></i>Datos de Contacto
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Direccion" class="control-label"></label>
                            <input asp-for="Direccion" class="form-control form-control-dark" placeholder="Ej: Jr. Los Pinos 123" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefono" class="control-label"></label>
                                <input asp-for="Telefono" class="form-control form-control-dark" placeholder="Ej: 987654321" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CorreoElectronico" class="control-label"></label>
                                <input asp-for="CorreoElectronico" class="form-control form-control-dark" placeholder="Ej: usuario@correo.com" />
                                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancelar y Volver</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Guardar Cambios</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}