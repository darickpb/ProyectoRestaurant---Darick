@model SaborCajabambino.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="main-content-container">

    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">

            <div class="text-center mb-4 p-3 rounded" style="background-color: rgba(220, 53, 69, 0.2);">
                <h1 class="text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Eliminar Cliente</h1>
                <p class="text-white-50">A continuación se muestran los datos del cliente que será eliminado. Por favor, revisa la información cuidadosamente antes de confirmar, ya que esta acción es irreversible.</p>
            </div>

            <div class="card bg-dark-card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center d-flex flex-column justify-content-center align-items-center border-end-md">
                            <i class="fas fa-user-circle fa-6x text-danger mb-3"></i>
                            <h4 class="text-white">Juan</h4>
                            <p class="text-white-50">Perez Garcia</p>
                            <span class="badge bg-secondary">ID: @Model.IdCliente</span>
                        </div>

                        <div class="col-md-8">
                            <div class="p-3">
                                <h5 class="text-white-50 mb-3 border-bottom pb-2">Datos Personales</h5>
                                <dl class="details-list">
                                    <dt>Nombres</dt>
                                    <dd>Juan</dd>

                                    <dt>Apellido Paterno</dt>
                                    <dd>Perez</dd>
                                    
                                    <dt>Apellido Materno</dt>
                                    <dd>Garcia</dd>

                                    <dt>DNI</dt>
                                    <dd>12345678</dd>

                                    <dt>Fecha de Nacimiento</dt>
                                    <dd>15/03/1985</dd>
                                </dl>

                                <h5 class="text-white-50 mb-3 mt-4 border-bottom pb-2">Información de Contacto</h5>
                                <dl class="details-list">
                                    <dt>Teléfono</dt>
                                    <dd>987654321</dd>

                                    <dt>Correo Electrónico</dt>
                                    <dd>juan.perez@example.com</dd>

                                    <dt>Dirección</dt>
                                    <dd>Av. Las Begonias 123</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="text-end mt-4">
                <input type="hidden" asp-for="IdCliente" />
                
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="fas fa-times me-2"></i>Cancelar y Volver
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-2"></i>Eliminar Cliente
                </button>
            </form>

        </div>
    </div>
</div>