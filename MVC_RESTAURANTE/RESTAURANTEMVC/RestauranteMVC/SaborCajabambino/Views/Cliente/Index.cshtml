@model IEnumerable<SaborCajabambino.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<!-- Contenedor principal para dar fondo y legibilidad -->
<div class="main-content-container">

    <h1 class="text-white mb-4">Gestión de Clientes</h1>

    <p>
        <!-- Botón estilizado para crear un nuevo cliente -->
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Crear Nuevo Cliente
        </a>
    </p>

    <!-- Contenedor para la tabla con scroll vertical -->
    <div class="table-responsive-md" style="max-height: 550px; overflow-y: auto;">
        <table class="table table-hover">
            <!-- El CSS se encarga del estilo del encabezado -->
            <thead class="sticky-top">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombres)</th>
                    <th>@Html.DisplayNameFor(model => model.ApellidoPaterno)</th>
                    <th>@Html.DisplayNameFor(model => model.Dni)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th>@Html.DisplayNameFor(model => model.CorreoElectronico)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                        <td>@Html.DisplayFor(modelItem => item.ApellidoPaterno)</td>
                        <td>@Html.DisplayFor(modelItem => item.Dni)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>@Html.DisplayFor(modelItem => item.CorreoElectronico)</td>
                        <td>
                            <!-- Botones de acción estilizados -->
                            <a asp-action="Edit" class="btn btn-sm btn-info" asp-route-id="@item.IdCliente" title="Editar"><i class="fas fa-pencil-alt"></i></a>
                            <a asp-action="Details" class="btn btn-sm btn-secondary" asp-route-id="@item.IdCliente" title="Detalles"><i class="fas fa-info-circle"></i></a>
                            <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.IdCliente" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

