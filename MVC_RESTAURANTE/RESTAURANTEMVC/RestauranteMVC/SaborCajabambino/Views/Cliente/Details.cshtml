@model SaborCajabambino.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="main-content-container">

    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">

            <div class="mb-4">
                <h1 class="text-white">Detalles del Cliente</h1>
                <p class="text-white-50">Ficha de información del cliente.</p>
            </div>

            <div class="card bg-dark-card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center d-flex flex-column justify-content-center align-items-center border-end-md">
                            <i class="fas fa-user-circle fa-6x text-info mb-3"></i>
                            <h4 class="text-white">@Model.Nombres</h4>
                            <p class="text-white-50">@($"{Model.ApellidoPaterno} {Model.ApellidoMaterno}")</p>
                            <span class="badge bg-success">ID: @Model.IdCliente</span>
                        </div>

                        <div class="col-md-8">
                            <div class="p-3">
                                <h5 class="text-white-50 mb-3 border-bottom pb-2">Datos Personales</h5>
                                <dl class="details-list">
                                    <dt>Nombres</dt>
                                    <dd>@Model.Nombres</dd>

                                    <dt>Apellido Paterno</dt>
                                    <dd>@Model.ApellidoPaterno</dd>

                                    <dt>Apellido Materno</dt>
                                    <dd>@Model.ApellidoMaterno</dd>

                                    <dt>DNI</dt>
                                    <dd>@Model.Dni</dd>

                                    <dt>Fecha de Nacimiento</dt>
                                    <dd>@Model.FechaNacimiento?.ToString("dd/MM/yyyy")</dd>
                                </dl>

                                <h5 class="text-white-50 mb-3 mt-4 border-bottom pb-2">Información de Contacto</h5>
                                <dl class="details-list">
                                    <dt>Teléfono</dt>
                                    <dd>@Model.Telefono</dd>

                                    <dt>Correo Electrónico</dt>
                                    <dd>@Model.CorreoElectronico</dd>

                                    <dt>Dirección</dt>
                                    <dd>@Model.Direccion</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mt-4">
                <a asp-action="Index" class="btn btn-secondary me-2"><i class="fas fa-arrow-left me-2"></i>Volver</a>
                <a asp-action="Edit" asp-route-id="@Model?.IdCliente" class="btn btn-primary"><i class="fas fa-pencil-alt me-2"></i>Editar</a>
            </div>

        </div>
    </div>
</div>