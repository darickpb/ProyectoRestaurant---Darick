@model SaborCajabambino.Models.Pedido

@{
    ViewData["Title"] = "Editar Pedido";
}

<div class="main-content-container">

    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdPedido" />

                <div class="text-center mb-4">
                    <h1 class="text-white">Editar Pedido</h1>
                    <p class="text-white-50">Modifica los detalles del pedido y guarda los cambios.</p>
                </div>

                <div class="card bg-dark-card mb-4">
                    <div class="card-header">
                        <i class="fas fa-receipt me-2"></i>Detalles del Pedido
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Fecha" class="control-label"></label>
                                <input asp-for="Fecha" class="form-control form-control-dark" type="date" />
                                <span asp-validation-for="Fecha" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Hora" class="control-label"></label>
                                <input asp-for="Hora" class="form-control form-control-dark" type="time" />
                                <span asp-validation-for="Hora" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdCliente" class="control-label"></label>
                                <select asp-for="IdCliente" class="form-control form-control-dark" asp-items="ViewBag.IdCliente"></select>
                                <span asp-validation-for="IdCliente" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdEmpleado" class="control-label"></label>
                                <select asp-for="IdEmpleado" class="form-control form-control-dark" asp-items="ViewBag.IdEmpleado"></select>
                                <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdMesa" class="control-label"></label>
                                <select asp-for="IdMesa" class="form-control form-control-dark" asp-items="ViewBag.IdMesa"></select>
                                <span asp-validation-for="IdMesa" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Estado" class="control-label"></label>
                                <select asp-for="Estado" class="form-control form-control-dark">
                                    <option value="En Proceso">En Proceso</option>
                                    <option value="Completado">Completado</option>
                                    <option value="Cancelado">Cancelado</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card bg-dark-card">
                    <div class="card-header">
                        <i class="fas fa-info-circle me-2"></i>Información Adicional
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TipoPedido" class="control-label"></label>
                                <select asp-for="TipoPedido" class="form-control form-control-dark">
                                    <option value="Mesa">Atención en Local</option>
                                    <option value="Delivery">Delivery</option>
                                    <option value="Llevar">Para Llevar</option>
                                </select>
                                <span asp-validation-for="TipoPedido" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DireccionEntrega" class="control-label"></label>
                                <input asp-for="DireccionEntrega" class="form-control form-control-dark" placeholder="Solo si es Delivery" />
                                <span asp-validation-for="DireccionEntrega" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Comentarios" class="control-label"></label>
                            <textarea asp-for="Comentarios" class="form-control form-control-dark" rows="3" placeholder="Anotaciones adicionales..."></textarea>
                            <span asp-validation-for="Comentarios" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancelar y Volver</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Guardar Cambios</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}