@model SaborCajabambino.Models.Reserva

@{
    ViewData["Title"] = "Eliminar Reserva";
}

<div class="main-content-container">

    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">

            <div class="text-center mb-4 p-3 rounded" style="background-color: rgba(220, 53, 69, 0.2);">
                <h1 class="text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Eliminar Reserva</h1>
                <p class="text-white-50">Estás a punto de eliminar permanentemente esta reserva. Revisa los detalles antes de confirmar.</p>
            </div>

            <div class="card bg-dark-card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center d-flex flex-column justify-content-center align-items-center border-end-md">
                            <i class="fas fa-calendar-times fa-6x text-danger mb-3"></i>
                            <h4 class="text-white">Reserva #@Model.IdReserva</h4>
                            <p class="text-white-50">Cliente: Juan Perez</p>
                            <span class="badge bg-success">Completado</span>
                        </div>

                        <div class="col-md-8">
                            <div class="p-3">
                                <h5 class="text-white-50 mb-3 border-bottom pb-2">Detalles de la Reserva</h5>
                                <dl class="details-list">
                                    <dt>Fecha / Hora</dt>
                                    <dd>01/02/2025 a las 10:00</dd>

                                    <dt>Cliente ID</dt>
                                    <dd>1</dd>

                                    <dt>Empleado ID</dt>
                                    <dd>1</dd>

                                    <dt>Mesa</dt>
                                    <dd>Mesa N° 3</dd>
                                    <dt>N° de Personas</dt>
                                    <dd>@Model.NumeroPersonas</dd>
                                </dl>

                                <h5 class="text-white-50 mb-3 mt-4 border-bottom pb-2">Detalles Adicionales</h5>
                                <dl class="details-list">
                                    <dt>Comentarios</dt>
                                    <dd>Primer pedido garantizado para cliente 1. Fin de semana.</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="text-end mt-4">
                <input type="hidden" asp-for="IdReserva" />

                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="fas fa-times me-2"></i>Cancelar y Volver
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-2"></i>Eliminar Reserva
                </button>
            </form>

        </div>
    </div>
</div>